<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminGradesActivity">

    <View
        android:id="@+id/view"
        android:layout_width="433dp"
        android:layout_height="912dp"
        android:background="@drawable/bg_rec"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <!-- Toolbar remains at the top -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_marginTop="35dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#1E427A"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/info_box"
        android:layout_width="381dp"
        android:layout_height="687dp"
        android:layout_margin="8dp"
        android:background="@drawable/box_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.562" />

    <TextView
        android:id="@+id/tv_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Grades"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/info_box"
        app:layout_constraintEnd_toEndOf="@+id/info_box"
        app:layout_constraintStart_toStartOf="@+id/info_box"
        app:layout_constraintTop_toTopOf="@+id/info_box"
        app:layout_constraintVertical_bias="0.025" />

    <ScrollView
        android:id="@+id/grades_list"
        android:layout_width="367dp"
        android:layout_height="594dp"
        android:background="@drawable/item"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/info_box"
        app:layout_constraintEnd_toEndOf="@+id/info_box"
        app:layout_constraintStart_toStartOf="@+id/info_box"
        app:layout_constraintTop_toBottomOf="@+id/tv_student_name"
        app:layout_constraintVertical_bias="0.6">

        <LinearLayout
            android:id="@+id/ll_grades_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:attr/dividerVertical"
            android:showDividers="middle">

            <!-- Grade Rows (1 to 9) -->
            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Programming 1"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
                <EditText
                    android:id="@+id/et_grade_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Grade"
                    android:background="@null"
                    android:textColorHint="#666"
                    android:textSize="13sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Programming 2"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
                <EditText
                    android:id="@+id/et_grade_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Grade"
                    android:background="@null"
                    android:textColorHint="#666"
                    android:textSize="13sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Row 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Data Structures"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
                <EditText
                    android:id="@+id/et_grade_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Grade"
                    android:background="@null"
                    android:textColorHint="#666"
                    android:textSize="13sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Row 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Algorithms"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
                <EditText
                    android:id="@+id/et_grade_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Grade"
                    android:background="@null"
                    android:textColorHint="#666"
                    android:textSize="13sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Row 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Database Management"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
                <EditText
                    android:id="@+id/et_grade_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Grade"
                    android:background="@null"
                    android:textColorHint="#666"
                    android:textSize="13sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Row 6 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Operating Systems"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
                <EditText
                    android:id="@+id/et_grade_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Grade"
                    android:background="@null"
                    android:textColorHint="#666"
                    android:textSize="13sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Row 7 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Computer Networks"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
                <EditText
                    android:id="@+id/et_grade_7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Grade"
                    android:background="@null"
                    android:textColorHint="#666"
                    android:textSize="13sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Row 8 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Software Engineering"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
                <EditText
                    android:id="@+id/et_grade_8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Grade"
                    android:background="@null"
                    android:textColorHint="#666"
                    android:textSize="13sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Row 9 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Web Development"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
                <EditText
                    android:id="@+id/et_grade_9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Grade"
                    android:background="@null"
                    android:textColorHint="#666"
                    android:textSize="13sp"
                    android:gravity="center" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Save Grades"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#1E427A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Progress Bar (Overlay) -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
