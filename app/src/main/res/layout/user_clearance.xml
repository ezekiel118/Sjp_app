    <!-- Header Box -->


    <!-- Profile Image -->

    <View
        android:id="@+id/view"
        android:layout_width="428dp"
        android:layout_height="852dp"
        android:background="@drawable/bg_rec"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/profile_box"
        android:layout_width="0dp"
        android:layout_height="152dp"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_rectangle"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="107dp"
        android:layout_height="105dp"
        android:src="@drawable/img"
        app:civ_border_color="#000"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_box"
        app:layout_constraintEnd_toEndOf="@+id/profile_box"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="@+id/profile_box"
        app:layout_constraintTop_toTopOf="@+id/profile_box"
        app:layout_constraintVertical_bias="0.468"/>

