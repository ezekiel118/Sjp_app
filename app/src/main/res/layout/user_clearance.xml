<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserClearanceActivity">

    <!-- 1. MAIN SCREEN CONTENT (First direct child of DrawerLayout) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Background -->
        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_rec"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Toolbar remains at the top -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="35dp"
            android:background="#1E427A"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Header Box -->
        <View
            android:id="@+id/profile_box"
            android:layout_width="0dp"
            android:layout_height="116dp"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_rectangle"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/clearance_box"
            app:layout_constraintVertical_bias="0.0"
            />

        <!-- Profile Image -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="107dp"
            android:layout_height="105dp"
            android:src="@drawable/img"
            app:civ_border_color="#000"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/profile_box"
            app:layout_constraintEnd_toEndOf="@+id/profile_box"
            app:layout_constraintHorizontal_bias="0.052"
            app:layout_constraintStart_toStartOf="@+id/profile_box"
            app:layout_constraintTop_toTopOf="@+id/profile_box" />

        <!-- Name -->
        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="sans-serif"
            android:text="Juan Dela Cruz"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/profile_box"
            app:layout_constraintEnd_toEndOf="@+id/profile_box"
            app:layout_constraintStart_toEndOf="@+id/profile_image"
            app:layout_constraintTop_toTopOf="@+id/profile_box" />

        <!-- Clearance Box -->
        <View
            android:id="@+id/clearance_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:background="@drawable/box_item"
            app:layout_constraintTop_toBottomOf="@id/profile_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <!-- Clearance Title -->
        <TextView
            android:id="@+id/clearnce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-black"
            android:text="Clearance"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="@+id/clearance_box"
            app:layout_constraintStart_toStartOf="@+id/clearance_box"
            app:layout_constraintTop_toTopOf="@+id/clearance_box" />

        <!-- Scrollable List -->
        <ScrollView
            android:id="@+id/clearance_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="12dp"
            android:background="@drawable/item"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/clearance_box"
            app:layout_constraintEnd_toEndOf="@+id/clearance_box"
            app:layout_constraintStart_toStartOf="@+id/clearance_box"
            app:layout_constraintTop_toBottomOf="@id/clearnce">

            <LinearLayout
                android:id="@+id/ll_user_clearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_clearance_title_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Your Clearance"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <!-- Row example (repeat for every office) -->
                <!-- 1. Accounting Office -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Accounting Office"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/cb_accounting_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false" />

                    <TextView
                        android:id="@+id/tv_accounting_remark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="(no remarks)"
                        android:textColor="#666"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- 2. Admission Office -->
