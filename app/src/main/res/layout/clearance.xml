<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Background -->
    <View
        android:id="@+id/view"
        android:layout_width="482dp"
        android:layout_height="997dp"
        android:background="@drawable/bg_rec"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Header Box -->
    <View
        android:id="@+id/view3"
        android:layout_width="431dp"
        android:layout_height="152dp"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <!-- Profile Image -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="107dp"
        android:layout_height="105dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="306dp"
        android:src="@drawable/img"
        app:civ_border_color="#000"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.541" />

    <!-- Name -->
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="163dp"
        android:layout_marginEnd="61dp"
        android:fontFamily="sans-serif-black"
        android:text="Juan Dela Cruz"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintVertical_bias="0.357" />

    <!-- Course and ID -->

    <!-- Clearance Box -->
    <View
        android:id="@+id/clearance_box"
        android:layout_width="382dp"
        android:layout_height="671dp"
        android:background="@drawable/box_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.916" />

    <!-- Clearance Title -->
    <TextView
        android:id="@+id/clearnce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Clearance"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@+id/clearance_box"
        app:layout_constraintStart_toStartOf="@+id/clearance_box"
        app:layout_constraintEnd_toEndOf="@+id/clearance_box" />

    <!-- Scrollable List -->
    <ScrollView
        android:id="@+id/clearance_list"
        android:layout_width="365dp"
        android:layout_height="599dp"
        android:background="@drawable/item"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/clearnce"
        app:layout_constraintStart_toStartOf="@id/clearance_box"
        app:layout_constraintEnd_toEndOf="@id/clearance_box"
        app:layout_constraintBottom_toBottomOf="@id/clearance_box">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:attr/dividerVertical"
            android:showDividers="middle">

            <!-- LIST ITEMS -->
            <!-- Each row: Office | Checkbox | Remarks -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Accounting Office"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Remarks"
                    android:background="@null"
                    android:textColorHint="#666"
                    android:textSize="13sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Repeat the same structure for each office -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="8dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.5" android:text="Admission Office" android:textSize="14sp" android:textColor="@color/black" />
                <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" />
                <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="Remarks" android:background="@null" android:textColorHint="#666" android:textSize="13sp" android:gravity="center" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="8dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.5" android:text="AVP-ACAD" android:textSize="14sp" android:textColor="@color/black" />
                <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" />
                <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="Remarks" android:background="@null" android:textColorHint="#666" android:textSize="13sp" android:gravity="center" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="8dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.5" android:text="Campus Ministry" android:textSize="14sp" android:textColor="@color/black" />
                <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" />
                <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="Remarks" android:background="@null" android:textColorHint="#666" android:textSize="13sp" android:gravity="center" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="8dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.5" android:text="Computer Laboratory" android:textSize="14sp" android:textColor="@color/black" />
                <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" />
                <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="Remarks" android:background="@null" android:textColorHint="#666" android:textSize="13sp" android:gravity="center" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="8dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.5" android:text="Digital Laboratory" android:textSize="14sp" android:textColor="@color/black" />
                <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" />
                <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="Remarks" android:background="@null" android:textColorHint="#666" android:textSize="13sp" android:gravity="center" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="8dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.5" android:text="Guidance Office" android:textSize="14sp" android:textColor="@color/black" />
                <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" />
                <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="Remarks" android:background="@null" android:textColorHint="#666" android:textSize="13sp" android:gravity="center" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="8dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.5" android:text="Library" android:textSize="14sp" android:textColor="@color/black" />
                <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" />
                <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="Remarks" android:background="@null" android:textColorHint="#666" android:textSize="13sp" android:gravity="center" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="8dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.5" android:text="Office of Student Affairs" android:textSize="14sp" android:textColor="@color/black" />
                <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" />
                <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="Remarks" android:background="@null" android:textColorHint="#666" android:textSize="13sp" android:gravity="center" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="8dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.5" android:text="Program Heads" android:textSize="14sp" android:textColor="@color/black" />
                <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" />
                <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="Remarks" android:background="@null" android:textColorHint="#666" android:textSize="13sp" android:gravity="center" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="8dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.5" android:text="Property Custodian" android:textSize="14sp" android:textColor="@color/black" />
                <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" />
                <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="Remarks" android:background="@null" android:textColorHint="#666" android:textSize="13sp" android:gravity="center" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="8dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.5" android:text="Quality Management Office" android:textSize="14sp" android:textColor="@color/black" />
                <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" />
                <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="Remarks" android:background="@null" android:textColorHint="#666" android:textSize="13sp" android:gravity="center" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="8dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.5" android:text="Scholarship and Grants Office" android:textSize="14sp" android:textColor="@color/black" />
                <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" />
                <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="Remarks" android:background="@null" android:textColorHint="#666" android:textSize="13sp" android:gravity="center" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="8dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.5" android:text="Science Laboratory" android:textSize="14sp" android:textColor="@color/black" />
                <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" />
                <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="Remarks" android:background="@null" android:textColorHint="#666" android:textSize="13sp" android:gravity="center" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="8dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.5" android:text="Supreme Student Council" android:textSize="14sp" android:textColor="@color/black" />
                <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" />
                <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="Remarks" android:background="@null" android:textColorHint="#666" android:textSize="13sp" android:gravity="center" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
