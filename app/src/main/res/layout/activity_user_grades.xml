<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserGradesActivity"
    tools:openDrawer="start">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_rec"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="35dp"
            android:background="#1E427A"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/profile_box"
            android:layout_width="0dp"
            android:layout_height="116dp"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_rectangle"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="107dp"
            android:layout_height="105dp"
            android:src="@drawable/img"
            app:civ_border_color="#000"
            app:civ_border_width="2dp"
            app:layout_constraintTop_toTopOf="@+id/profile_box"
            app:layout_constraintBottom_toBottomOf="@+id/profile_box"
            app:layout_constraintStart_toStartOf="@+id/profile_box"
            app:layout_constraintHorizontal_bias="0.052"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="sans-serif"
            android:text="Juan Dela Cruz"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/profile_box"
            app:layout_constraintEnd_toEndOf="@+id/profile_box"
            app:layout_constraintStart_toEndOf="@+id/profile_image"
            app:layout_constraintTop_toTopOf="@+id/profile_box" />

        <View
            android:id="@+id/info_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:background="@drawable/box_item"
            app:layout_constraintTop_toBottomOf="@+id/profile_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/grades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Grades"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintTop_toTopOf="@+id/info_box"
            app:layout_constraintStart_toStartOf="@+id/info_box"
            app:layout_constraintEnd_toEndOf="@+id/info_box"
            app:layout_constraintVertical_bias="0.025" />

        <ScrollView
            android:id="@+id/grades_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="12dp"
            android:background="@drawable/item"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@+id/grades"
            app:layout_constraintBottom_toBottomOf="@+id/info_box"
            app:layout_constraintStart_toStartOf="@+id/info_box"
            app:layout_constraintEnd_toEndOf="@+id/info_box">

            <LinearLayout
                android:id="@+id/ll_grades_container_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="?android:attr/dividerVertical"
                android:showDividers="middle">

                <!-- Programming 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Programming 1"
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/et_programming1_user"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Grade"
                        android:background="@null"
                        android:textColorHint="#666"
                        android:textSize="13sp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Programming 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Programming 2"
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/et_programming2_user"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Grade"
                        android:background="@null"
                        android:textColorHint="#666"
                        android:textSize="13sp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Data Structures -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Data Structures"
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/et_datastructures_user"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Grade"
                        android:background="@null"
                        android:textColorHint="#666"
                        android:textSize="13sp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Algorithms -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Algorithms"
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/et_algorithms_user"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Grade"
                        android:background="@null"
                        android:textColorHint="#666"
                        android:textSize="13sp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Database Management -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Database Management"
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/et_database_user"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Grade"
                        android:background="@null"
                        android:textColorHint="#666"
                        android:textSize="13sp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Operating Systems -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Operating Systems"
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/et_operatingsystems_user"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Grade"
                        android:background="@null"
                        android:textColorHint="#666"
                        android:textSize="13sp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Computer Networks -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Computer Networks"
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/et_computernetworks_user"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Grade"
                        android:background="@null"
                        android:textColorHint="#666"
                        android:textSize="13sp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Software Engineering -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Software Engineering"
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/et_softwareengineering_user"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Grade"
                        android:background="@null"
                        android:textColorHint="#666"
                        android:textSize="13sp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Web Development -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Web Development"
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/et_webdevelopment_user"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Grade"
                        android:background="@null"
                        android:textColorHint="#666"
                        android:textSize="13sp"
                        android:gravity="center" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
