<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Background -->

    <!-- Header Box -->

    <!-- Profile Image -->
    <View
        android:id="@+id/view"
        android:layout_width="433dp"
        android:layout_height="912dp"
        android:background="@drawable/bg_rec"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/profile_box"
        android:layout_width="0dp"
        android:layout_height="152dp"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_rectangle"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="107dp"
        android:layout_height="105dp"
        android:src="@drawable/jp"
        app:civ_border_color="#000"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_box"
        app:layout_constraintEnd_toEndOf="@+id/profile_box"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="@+id/profile_box"
        app:layout_constraintTop_toTopOf="@+id/profile_box"
        app:layout_constraintVertical_bias="0.468"/>

    <!-- Name -->
    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-black"
        android:text="ADMIN"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_box"
        app:layout_constraintEnd_toEndOf="@+id/profile_box"
        app:layout_constraintStart_toEndOf="@+id/profile_image"
        app:layout_constraintTop_toTopOf="@+id/profile_box" />

    <!-- Course and ID -->
    <!-- Clearance Box -->
    <View
        android:id="@+id/clearance_box"
        android:layout_width="354dp"
        android:layout_height="667dp"
        android:background="@drawable/box_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.916" />

    <!-- Clearance Title -->
    <TextView
        android:id="@+id/clearnce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Clearance"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@+id/clearance_box"
        app:layout_constraintStart_toStartOf="@+id/clearance_box"
        app:layout_constraintEnd_toEndOf="@+id/clearance_box" />

    <!-- Scrollable List -->
