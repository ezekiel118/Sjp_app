        android:id="@+id/clearance_list"
        android:layout_width="350dp"
        android:layout_height="599dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/item"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="@id/clearance_box"
        app:layout_constraintEnd_toEndOf="@id/clearance_box"
        app:layout_constraintStart_toStartOf="@id/clearance_box"
        app:layout_constraintTop_toBottomOf="@id/clearnce">

